% makes header
\newcommand{\makefinding}[1]{
    \vspace*{-1cm} % get rid of random white space
    \noindent\makebox[\linewidth][c]{%
      \colorbox{\postertype}{%
        \parbox[t][0.17\paperheight][c]{\paperwidth}{%
          \hspace*{\dimexpr\hoffset+\oddsidemargin+1in\relax}%
          \begin{minipage}{\textwidth}
          \textcolor{white}
            {\fontsize{40}{50} \selectfont
            \begin{center}
                 \nohyphens{#1}
            \end{center}
            }
          \end{minipage}%
        }%
      }%
    }\par\medskip
}
% makes footer
\newcommand{\makefooter}[2]{
    \vspace{\fill}
    \noindent\makebox[\linewidth][c]{%
      \colorbox{\postertype}{%
        \parbox[c][0.14\paperheight][c]{\paperwidth}{%
          \hspace{\dimexpr\hoffset+\oddsidemargin+1in\relax}%
          \begin{minipage}[c][0.14\paperheight][c]{0.15\textwidth}
                \includegraphics[height=0.11\paperheight, left]{#2}
          \end{minipage}
          \begin{minipage}[c][0.14\paperheight][c]{0.3\textwidth}
              \textcolor{white}
                {\large{
                   $\leftarrow$ Github Repo }
                }  
          \end{minipage}
          \hfill
          \begin{minipage}[c][0.14\paperheight][c]{0.2\textwidth}
            \includegraphics[height=0.11\paperheight, left]{#1}
          \end{minipage}
        }%
      }%
    }\par\medskip
}
% alternative footer
\newcommand{\makealtfooter}[2]{
    \vspace{\fill}
    \noindent\makebox[\linewidth][c]{%
      \colorbox{\postertype}{%
        \parbox[c][0.125\paperheight][c]{\paperwidth}{%
          \hspace{\dimexpr\hoffset+\oddsidemargin+1in-1.6cm\relax}% Reduced spacing here
          \begin{minipage}[c][0.14\paperheight][c]{0.3\textwidth}
            % your logo here
            \includegraphics[height=0.14\paperheight, left]{#1}
            \end{minipage}
          \hfill
          \begin{minipage}[c][0.14\paperheight][c]{0.4\textwidth}
            \begin{flushright}
                \textcolor{white}
                {\large{
                    Github Repo $\rightarrow$}
                }
                \end{flushright}
          \end{minipage}
          \begin{minipage}[c][0.14\paperheight][c]{0.2\textwidth}
                \includegraphics[height=0.11\paperheight, left]{#2}
          \end{minipage}
        }%
      }%
    }\par\medskip
}
% makes main column
